<div class="container-fluid">
    <div class="row w-75 mt-5 myRow">
        <div class="col-md-9  mt-5 bg-light">

            {{#each Article}}
            <form action="/save" method="POST">
                <input type="hidden" name="title" value="{{this.title}}"> <h3 class="bg-success p-3"> {{this.title}} </h3>
                <h4 class="bg-light mb-5 p-1">{{this.summary}} </h4>
                <input type="hidden" name="summary" value="{{this.summary}}">
                <button type="submit" id="save" class="btn btn-warning">Save</button>
                 <button  id="note" class="btn btn-warning">Create Note</button>
            </form>
            {{/each}}

        </div>
    </div>
</div>